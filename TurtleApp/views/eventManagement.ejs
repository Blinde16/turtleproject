<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
<h1 style="text-align: center;">Events</h1>

<style>
    body {
      font-family: Arial, sans-serif;
      margin: 20px;
    }
    h1 {
      text-align: center;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 20px;
    }
    th, td {
      border: 1px solid #ccc;
      padding: 10px;
      text-align: left;
    }
    th {
      background-color: #f4f4f4;
    }
    tr:nth-child(even) {
      background-color: #f9f9f9;
    }
    .actions button {
      margin: 0 5px;
      padding: 5px 10px;
      border: none;
      border-radius: 3px;
      cursor: pointer;
    }
    /* Styling for the View button */
    .btn-view {
        background-color: #87CEEB; /* Light blue */
        color: white;
        border: none;
        border-radius: 5px;
        padding: 8px 15px;
        cursor: pointer;
        font-size: 14px;
    }

    /* Styling for the Edit button */
    .btn-edit {
        background-color: #4169E1; /* Royal blue */
        color: white;
        border: none;
        border-radius: 5px;
        padding: 8px 15px;
        cursor: pointer;
        font-size: 14px;
    }

    /* Styling for the Delete button */
    .btn-delete {
        background-color: #FF6347; /* Tomato red */
        color: white;
        border: none;
        border-radius: 5px;
        padding: 8px 15px;
        cursor: pointer;
        font-size: 14px;
    }

    /* Add hover effects */
    .btn-view:hover {
        background-color: #6CA6CD; /* Darker blue */
    }

    .btn-edit:hover {
        background-color: #27408B; /* Darker royal blue */
    }

    .btn-delete:hover {
        background-color: #CD5C5C; /* Darker red */
    }

    .edit-btn:hover {
      background-color: #f57c00;
    }
    .del-btn:hover {
      background-color: #b71c1c;
    }
    .buttons {
      margin-top: 20px;
      text-align: center;
    }
    .buttons button {
      margin: 0 10px;
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
      border: none;
      border-radius: 5px;
    }
    .download-btn {
      background-color: #1976d2;
      color: white;
    }
    .add-btn {
      background-color: #388e3c;
      color: white;
    }
    .download-btn:hover {
      background-color: #1565c0;
    }
    .add-btn:hover {
      background-color: #2e7d32;
    }
</style>

<form action="/addevent" method="GET">
  <button type="submit">Add Event</button>
</form>

  <table>
    <thead>
      <tr>
        <th>Event Date</th>
        <th>Contact_First</th>
        <th>Contact_Last</th>
        <th>Contact_Phone</th>
        <th>Number of Participants</th>
        <th>EventStart</th>
        <th>EventDuration</th>
        <th>Event Address</th>
        <th>SewingPreference</th>
        <th>JenStory</th>
        <th>EventDetails</th>
        <th>EventStatus</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% if (events.length > 0) { %>
        <% events.forEach(row => { %>
          <tr>
            <input type="hidden" value="row.eventid">
            <td><%= new Date(row.confirmedeventdate).toLocaleDateString('en-US') %></td>
            <td><%= row.contact_first %></td>
            <td><%= row.contact_last %></td>
            <td> <!-- Phone logic to account for 7 digit and 10 digit phone numbers and if it doesn't fit display the non formatted number-->
                <%= (() => {
                  const cleaned = row.contactphone.replace(/\D/g, ''); // Remove non-numeric characters
                  if (cleaned.length === 10) {
                    // Format with area code (e.g., 509-123-4352)
                    return `${cleaned.slice(0, 3)}-${cleaned.slice(3, 6)}-${cleaned.slice(6)}`;
                  } else if (cleaned.length === 7) {
                    // Format without area code (e.g., 123-4352)
                    return `${cleaned.slice(0, 3)}-${cleaned.slice(3)}`;
                  } else {
                    // Return as is if it doesn't match expected lengths
                    return row.contactphone;
                  }
                })() %>
            </td>
            <td><%= row.numparticipants %></td>
            <td><%= row.eventstart %></td>
            <td><%= row.eventduration %></td>
            <td><%= row.streetaddress %>, <%= row.city %>, <%= row.state %>, <%= row.zip %></td>
            <td><%= row.sewing_description %></td>
            <td><%= row.jenstory ? 'Yes' : 'No' %></td>
            <td><%= row.eventdetails %></td>
            <td><%= row.status_description %></td>
            <td>
              <div class="actions-button">
              <form action="/eventdetails/<%= row.eventid %>" method="GET" style="display:inline;">
                <button type="submit" class="btn-view">View</button>
              </form>
              <form action="/editevent/<%= row.eventid %>" method="GET" style="display:inline;">
                <button type="submit" class="btn-edit">Edit</button>
              </form>
              <form action="/deleteevent/<%= row.eventid %>" method="POST" style="display:inline;">
                <button type="submit" class="btn-delete" onclick="return confirm('Are you sure you want to delete this record?');">Delete</button>
              </form>
            </div>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="7">No data available</td>
        </tr>
      <% } %>
    </tbody>
  </table>
  <form action="/" method="GET">
    <button type="submit">Return to Home Page</button>
</form>
<script>
  // Check for the 'deletesuccess' parameter in the URL
  const urlParams = new URLSearchParams(window.location.search);
  if (urlParams.get('deletesuccess') === 'true') {
      alert('Event was deleted successfully!');
  }
</script>
</body>
</html>

