<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Inspired Contact Form</title>
  <style>
    form {
      width: 50%;
      margin: 20px auto;
      padding: 20px;
      border: 1px solid #ccc;
      border-radius: 10px;
      background-color: #F9F9F9;
      font-size: 12px;
    }
    label {
      display: block;
      margin-bottom: 8px;
      font-weight: bold;
    }
    input, select, button {
      width: 100%;
      padding: 8px;
      margin-bottom: 15px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }
    input[type="checkbox"], input[type="radio"] {
      width: auto;
      margin-right: 5px;
    }
    button {
      background-color: #4CAF50;
      color: white;
      font-size: 12px;
      cursor: pointer;
    }
    button:hover {
      background-color: #45A049;
    }        
    .btn-edit:hover {
    background-color: #27408B; /* Darker royal blue */
    }
    .btn-view {
        background-color: #87CEEB; /* Light blue */
        color: white;
        border: none;
        border-radius: 5px;
        padding: 8px 15px;
        cursor: pointer;
        font-size: 14px;
    }
    h1 {
    text-align: center;
    }
    </style>
</head>
<body>
    <h1>Request an Event</h1>
    <a href="/" class="btn-view">Back to Home</a>
<div class="form-container">
  <form action="#" method="POST">

    <!-- Contact Name and Phone Number for the organizer/lead -->
      <div class="form-group">
      <label for="contact_first">First Name: </label>
      <input type="text" id="contact_first" name="contact_first" required>
      <label for="contact_last">Last Name: </label>
      <input type="text" id="contact_last" name="contact_last" required>
      <label for="contactphone">Phone Number: </label>
      <input type="number" id="contactphone" name="contactphone" required>
      </div>

      <!-- Number of Participants -->
      <div class="form-group">
      <label for="numParticipants">How many people will be participating? (This can be a rough estimate)</label>
      <input type="number" id="numParticipants" name="numParticipants" required>
    </div>

      <!-- Sewing Preference -->
      <div class="form-group">
      <label for="sewingPreference">Would you prefer sew, not sew, or both?</label>
      <select id="sewingPreference" name="sewingPreference" required>
          <% sewingPreferences.forEach(pref => { %>
              <option value="<%= pref.sewingpreferenceid %>"><%= pref.description %></option>
          <% }); %>
      </select>
      </div> 
  
      <!-- Event Dates -->
       <!-- Preferred Primary Date -->
      <div class="form-group">
        <label for="primaryDate">What is your preferred primary date for the event that you would like to schedule?</label>
        <input type="date" id="primaryDate" name="primaryDate" required>
      </div>

      <!-- Preferred Secondary Date -->
      <div class="form-group">
        <label for="secondaryDate">What is your preferred secondary date for the event that you would like to schedule?</label>
        <input type="date" id="secondaryDate" name="secondaryDate" required>
      </div>

      <!-- Preferred Tertiary Alternative Date -->
      <div class="form-group">
        <label for="tertiaryDate">What is your preferred tertiary alternative date for the event that you would like to schedule?</label>
        <input type="date" id="tertiaryDate" name="tertiaryDate" required>
      </div>
  
      <!-- Address -->
      <div class="form-group">
        <label for="streetAddress">Address of the event: </label>
        <input type="text" id="streetAddress" name="streetAddress" placeholder="Enter event street address" required>
      </div>
      
      <div class="form-group">
        <label for="city">City: </label>
        <input type="text" id="city" name="city" placeholder="Enter event city" required>
      </div>
      
      <div class="form-group">
        <label for="state">State (Use two letter abbreviation): </label>
        <input type="text" id="state" name="state" placeholder="Enter event state" required>
      </div>
      
      <div class="form-group">
        <label for="zip">Zip Code: </label>
        <input type="text" id="zip" name="zip" placeholder="Enter event zip code" required>
      </div>

      <div class="form-group">
        <label for="SpaceSize">Space Size: </label>
        <input type="text" id="SpaceSize" name="SpaceSize" placeholder="eg: Large living room, Church Gym, etc" required>
      </div>
 
  
      <!-- Event Time and Duration -->
      <div class="form-group">
        <label for="eventstart">Event start time: </label>
        <input type="time" id="eventstart" name="eventstart" required>
      </div>
      
      <div class="form-group">
      <label for="eventduration">Event duration: </label>
      <input type="text" id="eventduration" name="eventduration" placeholder="e.g., 2 hours" required>
      </div>

      <!-- Jen's Story -->
      <div class="form-group">
      <label for="jenstory">Would you like Jen to share her story?</label>
      <select id="jenstory" name="jenstory" required>
          <option value=True>Yes</option>
          <option value=False>No</option>
    </select>
      </div>
  
    <!-- Submit Button -->
    <button type="submit" class="form-button">Submit</button>
  </form>
</div>

</body>
</html>
