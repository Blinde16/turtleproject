<!DOCTYPE html>
<html>
<head>
  <title>Add Volunteer</title>
  <style>
    form {
      width: 50%;
      margin: 20px auto;
      padding: 20px;
      border: 1px solid #ccc;
      border-radius: 10px;
      background-color: #F9F9F9;
      font-size: 12px;
    }
    label {
      display: block;
      margin-bottom: 8px;
      font-weight: bold;
    }
    input, select, button {
      width: 100%;
      padding: 8px;
      margin-bottom: 15px;
      border: 1px solid #ccc;
      border-radius: 5px;
    }
    input[type="checkbox"], input[type="radio"] {
      width: auto;
      margin-right: 5px;
    }
    button {
      background-color: #4CAF50;
      color: white;
      font-size: 12px;
      cursor: pointer;
    }
    button:hover {
      background-color: #45A049;
    }
  </style>
</head>
<body>
  <h1 style="text-align: center;">Add Volunteer</h1>
  <form action="/addVolunteer" method="POST">
    <!-- Volunteer First Name -->
    <label for="first_name">First Name</label>
    <input type="text" id="first_name" name="first_name" value="" required oninput="this.value = this.value.toUpperCase()">
    <!-- Volunteer Last Name -->
    <label for="last_name">Last Name</label>
    <input type="text" id="last_name" name="last_name" value="" required oninput="this.value = this.value.toUpperCase()">
    <!-- Volunteer Email -->
    <label for="email">Email</label>
    <input type="text" id="email" name="email" value="" required oninput="this.value = this.value.toUpperCase()">
    <!-- Volunteer Phone Number -->
    <label for="phone_number">Phone Number</label>
    <input type="number" id="phone_number" name="phone_number" value="" required>
    <!-- Volunteer Heard About -->
        <label for="heard_about_id">Heard About</label>
        <select id="heard_about_id" name="heard_about_id"> <!-- this is a dropdown list where we need to make an option for each option we want to show up-->
          <% heardAboutOptions.forEach(option => { %>
            <option value="<%= option.heardaboutid %>">
              <%= option.description %>
            </option>
          <% }) %>
        </select>
    <!-- Volunteer Hours Per Month -->
    <label for="hours_per_month">Hours Per Month</label>
    <input type="number" id="hours_per_month" name="hours_per_month" value="" required >
    <!-- Volunteer Sewing Level -->
    <label for="sewing_level">Sewing Level</label>
    <select id="sewing_level" name="sewing_level"> <!-- this is a dropdown list where we need to make an option for each option we want to show up-->
      <% sewingLevelOptions.forEach(option => { %>
        <option value="<%= option.sewinglevelid %>">
          <%= option.description %>
        </option>
      <% }) %>
    </select>
    <!-- Volunteer Sewing Preference -->
    <label for="sewing_preference">Sewing Preference</label>
    <select id="sewing_preference" name="sewing_preference"> <!-- this is a dropdown list where we need to make an option for each option we want to show up-->
      <% sewingPreferenceOptions.forEach(option => { %>
        <option value="<%= option.sewingpreferenceid %>">
          <%= option.description %>
        </option>
      <% }) %>
    </select>
    <label for="city">City</label>
    <input type="text" id="city" name="city" value="" required oninput="this.value = this.value.toUpperCase()">
    <!-- Address City (Radio Buttons) -->
    <label for="state">State</label>
    <input type="text" id="state" name="state" value="" required oninput="this.value = this.value.toUpperCase()">
    
    <label for="zip">Zip</label>
    <input type="text" id="zip" name="zip" value="" required oninput="this.value = this.value.toUpperCase()">
    
    <!-- Submit Button -->
    <button type="submit">Add Volunteer</button>
  </form>
</body>
</html>