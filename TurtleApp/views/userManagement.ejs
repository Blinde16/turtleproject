<style>
body {
  font-family: Arial, sans-serif;
  margin: 20px;
}
h1 {
  text-align: center;
}
table {
  width: 100%;
  border-collapse: collapse;
  margin-top: 20px;
}
th, td {
  border: 1px solid #ccc;
  padding: 10px;
  text-align: left;
}
th {
  background-color: #f4f4f4;
}
tr:nth-child(even) {
  background-color: #f9f9f9;
}
.actions button {
  margin: 0 5px;
  padding: 5px 10px;
  border: none;
  border-radius: 3px;
  cursor: pointer;
}
/* Styling for the View button */
.btn-view {
    background-color: #87CEEB; /* Light blue */
    color: white;
    border: none;
    border-radius: 5px;
    padding: 8px 15px;
    cursor: pointer;
    font-size: 14px;
}

/* Styling for the Edit button */
.btn-edit {
    background-color: #4169E1; /* Royal blue */
    color: white;
    border: none;
    border-radius: 5px;
    padding: 8px 15px;
    cursor: pointer;
    font-size: 14px;
}

/* Styling for the Delete button */
.btn-delete {
    background-color: #FF6347; /* Tomato red */
    color: white;
    border: none;
    border-radius: 5px;
    padding: 8px 15px;
    cursor: pointer;
    font-size: 14px;
}

/* Add hover effects */
.btn-view:hover {
    background-color: #6CA6CD; /* Darker blue */
}

.btn-edit:hover {
    background-color: #27408B; /* Darker royal blue */
}

.btn-delete:hover {
    background-color: #CD5C5C; /* Darker red */
}

.edit-btn:hover {
  background-color: #f57c00;
}
.del-btn:hover {
  background-color: #b71c1c;
}
.buttons {
  margin-top: 20px;
  text-align: center;
}
.buttons button {
  margin: 0 10px;
  padding: 10px 20px;
  font-size: 16px;
  cursor: pointer;
  border: none;
  border-radius: 5px;
}
.download-btn {
  background-color: #1976d2;
  color: white;
}
.add-btn {
  background-color: #388e3c;
  color: white;
}
.download-btn:hover {
  background-color: #1565c0;
}
.add-btn:hover {
  background-color: #2e7d32;
}
</style>
<h1 style="text-align: center;">User Management</h1>

<form action="/addUser" method="GET" style="display:inline;">
  <button type="submit"  class="btn-view">Add User</button>
</form>

<form action="/" method="GET">
<button type="submit" class="btn-edit" style="display:inline;">Return to Home Page</button>
</form>

    <table>
      <thead>
        <tr>
          <th>Username</th>
          <th>Password</th>
          <th>Email</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (userinfo.length > 0) { %>
          <% userinfo.forEach(row => { %>
            <tr>
              <input type="hidden" value="<%= row.userid%>">
              <td><%= row.username %></td>
              <td><%= row.password %></td>
              <td><%= row.email %></td>
              <td>
                <form action="/edituser/<%= row.userid %>" method="GET" style="display:inline;">
                  <button type="submit" class="btn-edit">Edit</button>
                </form>
                <form action="/deleteuser/<%= row.userid %>" method="POST" style="display:inline;">
                  <button type="submit" class="btn-delete" onclick="return confirm('Are you sure you want to delete this record?');">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="7">No data available</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </form>